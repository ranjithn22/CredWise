@model CredWise_Trail.Models.ViewModels.RegistrationViewModel

@{
    Layout = "~/Views/Shared/RegisterNav.cshtml";
    ViewData["Title"] = "Create Your Account";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .form-container-wrapper {
        max-width: 500px;
        width: 100%;
        margin: auto;
    }

    .form-card {
        border: 1px solid #e9ecef;
        border-radius: 0.75rem;
        box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, .04);
        background-color: #ffffff;
    }

        .form-card .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #e9ecef;
            font-weight: 600;
            color: #343a40;
            font-size: 1.5rem;
            text-align: center;
            padding: 1.5rem 1rem;
        }

            .form-card .card-header i {
                color: #0A2463;
                margin-right: 0.5rem;
            }

    .form-card .card-body {
        padding: 2rem;
    }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label,
    .form-floating > .form-select ~ label {
        color: #0A2463;
    }

    .btn-primary {
        background-color: #3E92CC;
        padding: 0.75rem 1rem;
        font-weight: 500;
    }

        .btn-primary:hover {
            background-color: #0A2463;
            border-color: white;
        }

    .form-footer-links {
        text-align: center;
        margin-top: 1.5rem;
    }

        .form-footer-links a {
            color: #3E92CC;
            text-decoration: none;
        }

            .form-footer-links a:hover {
                color: #0A2463;
                text-decoration: underline;
            }

    .bank-logo {
        display: block;
        text-align: center;
        font-size: 2rem;
        font-weight: bold;
        color: #0d6efd;
        margin-bottom: 1.5rem;
        text-decoration: none;
    }

        .bank-logo i {
            margin-right: 0.5rem;
        }

    .file-upload-label {
        display: block;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .form-control[type="file"] {
        border: 1px dashed #ced4da;
        padding: 1rem;
        transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    }

        .form-control[type="file"]:hover {
            border-color: #0d6efd;
        }

    .alert-instructions {
        background-color: #e9f5ff;
        color: #055160;
        border: 1px solid #b6e0fe;
    }

    .form-check-label a {
        color: #3E92CC;
        text-decoration: none;
    }

    .form-check-label a:hover {
        text-decoration: underline;
        color: #0A2463;
    }
</style>

<div class="form-container-wrapper shadow">
    <div class="card form-card">
        <div class="card-header">
            <i class="fas fa-user-plus"></i>Create Your Account
        </div>
        <div class="card-body">
            <form asp-action="Register" asp-controller="Account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Name" type="text" class="form-control" placeholder="John Doe" />
                    <label asp-for="Name"><i class="fas fa-user me-2"></i>Full Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com" />
                    <label asp-for="Email"><i class="fas fa-envelope me-2"></i>Email address</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <textarea asp-for="Address" class="form-control" placeholder="Your Address" id="Address" style="height: 100px;"></textarea>
                    <label asp-for="Address" for="Address"><i class="fas fa-map-marker-alt me-2"></i>Address</label>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Your Phone Number" />
                    <label asp-for="PhoneNumber"><i class="fas fa-phone me-2"></i>Phone Number</label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                

                <div class="form-floating mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Create Password" />
                    <label asp-for="Password"><i class="fas fa-lock me-2"></i>Create Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                    <label asp-for="ConfirmPassword"><i class="fas fa-check-circle me-2"></i>Confirm Password</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-check mb-4">
                    <input class="form-check-input" type="checkbox" value="" id="agreeTerms" required>
                    <label class="form-check-label" for="agreeTerms">
                        I agree to the <a href="#">Terms and Conditions</a>
                    </label>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-user-plus me-2"></i>Register
                </button>
            </form>

            <div class="form-footer-links">
                <span>Already have an account? <a href="@Url.Action("Login","Account")">Login here</a></span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}