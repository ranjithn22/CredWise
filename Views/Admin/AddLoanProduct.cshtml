@model CredWise_Trail.Models.ViewModels.LoanProductViewModel

@{
    Layout = "~/Views/Shared/AdminUtility.cshtml";
    ViewData["Title"] = "Add Loan Product";
}

<style>
    :root {
        --primary-brand-color: #0A2463;
        --secondary-accent-color: #3E92CC;
    }

    .page-header h2, .page-header .h3 {
        color: var(--primary-brand-color);
        font-weight: 700;
    }
    body{
        background-color: #f0f2f5; 
    }
    .btn-outline-primary {
        background-color: #3E92CC;
        color: white;
        border-color: white;
    }

        .btn-outline-primary:hover {
            background-color: #0A2463 !important;
            border-color: white;
        }

    .form-control:focus {
        box-shadow: 0 0 0 0.20rem rgba(62, 146, 204, 0.4);
    }

    .stylish-card {
        border: none;
        border-radius: 0.85rem;
        box-shadow: 0 8px 25px rgba(0, 0, 0, .07);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        background-color: #ffffff;
        overflow: hidden;
    }

    .form-label .fas {
        font-size: 0.9em;
        opacity: 0.8;
        color: #3E92CC;
    }

    .input-group-text {
        background-color: #e9ecef;
        border: 1px solid #ced4da;
        border-left: none;
        font-size: 0.9rem;
        color: #495057;
    }
</style>

<div class="container-fluid p-lg-3">
    
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <div class="page-header mb-4">
                <h2 class="h3"><i class="fas fa-hand-holding-usd me-2"></i>New Loan Product Setup</h2>
                <p class="text-muted">Configure and launch new loan products and offerings.</p>
            </div>
            <div class="card custom-card stylish-card">
                <div class="card-body p-4 p-lg-5">
                    <h2 style="color: #0A2463;" class="text-center">@ViewData["Title"]</h2>
                    <form asp-action="AddLoanProduct" asp-controller="Admin" method="post"> 
                        <div class="mb-4">
                            <label asp-for="ProductName" class="form-label"><i class="fas fa-tag me-2"></i>Product Name</label>
                            <input asp-for="ProductName" type="text" class="form-control form-control-lg" required placeholder="e.g., Home Loan,Personal Finance">
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <label asp-for="InterestRate" class="form-label"><i class="fas fa-percentage me-2"></i>Interest Rate</label>
                                <div class="input-group input-group-lg">
                                    <input asp-for="InterestRate" type="number" class="form-control" step="0.01" required placeholder="e.g., 5.75">
                                    <span class="input-group-text">%</span>
                                </div>
                                <span asp-validation-for="InterestRate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Tenure" class="form-label"><i class="fas fa-calendar-alt me-2"></i>Maximum Tenure</label>
                                <div class="input-group input-group-lg">
                                    <input asp-for="Tenure" type="number" class="form-control" required placeholder="e.g., 120">
                                    <span class="input-group-text">months</span>
                                </div>
                                <span asp-validation-for="Tenure" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <label asp-for="MinAmount" class="form-label"><i class="fas fa-dollar-sign me-2"></i>Minimum Loan Amount</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text">₹</span>
                                    <input asp-for="MinAmount" type="number" class="form-control" step="1000" required placeholder="e.g., 1000">
                                </div>
                                <span asp-validation-for="MinAmount" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="MaxAmount" class="form-label"><i class="fas fa-coins me-2"></i>Maximum Loan Amount</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text">₹</span>
                                    <input asp-for="MaxAmount" type="number" class="form-control" step="1000" required placeholder="e.g., 500000">
                                </div>
                                <span asp-validation-for="MaxAmount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-outline-primary btn-lg px-4 "><i class="fas fa-save me-2"></i>Save Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}