@model CredWise_Trail.Models.ViewModels.CustomerDashboardViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Dashboard - CredWise</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
          integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        :root {
            --primary-brand-color: #0A2463;
            --secondary-accent-color: #3E92CC;
            --light-background-color: #f0f2f5;
            --text-dark: #343a40;
            --text-secondary: #6c757d;
            --border-light: #e9ecef;
            --success-soft: #d1e7dd;
            --success-text: #0f5132;
            --warning-soft: #fff3cd;
            --warning-text: #664d03;
            --info-soft: #cff4fc;
            --info-text: #055160;
            --danger-color: #dc3545; 
            --warning-color: #ffc107; 
            --success-color: #198754;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #495057;
        }

        .hero-section {
            background: linear-gradient(rgba(10, 36, 99, 0.85), rgba(10, 36, 99, 0.85)), url('https://images.unsplash.com/photo-1579621970795-87facc2f976d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80') no-repeat center center;
            background-size: cover;
            color: white;
            padding: 100px 0;
            text-align: center;
        }

            .hero-section h1 {
                font-size: 3.5rem;
                font-weight: 700;
                margin-bottom: 20px;
            }

            .hero-section p {
                font-size: 1.25rem;
                margin-bottom: 30px;
            }

            .hero-section .btn-light {
                color: var(--primary-brand-color) !important;
            }

        .card {
            border: 1px solid var(--border-light);
            border-radius: 0.75rem;
            box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, .04);
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }

            .card:hover {
                transform: translateY(-3px);
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, .06);
            }

        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid var(--border-light);
            font-weight: 600;
            color: var(--text-dark);
        }

        .card-title-custom {
            font-size: 0.9rem;
            font-weight: 500;
            color: var(--text-secondary);
            margin-bottom: 0.25rem;
            text-transform: uppercase;
        }

        .card-text-value {
            font-size: 1.75rem;
            font-weight: bold;
            color: var(--primary-brand-color);
        }

            .card-text-value.small {
                font-size: 1.25rem;
            }

        .loan-progress {
            height: 10px;
            border-radius: 5px;
        }

        .progress-bar.bg-primary {
            background-color: var(--primary-brand-color) !important;
        }

        .table th {
            font-weight: 600;
            color: var(--text-dark);
        }

        .table td,
        .table th {
            vertical-align: middle;
        }

        .table-hover tbody tr:hover {
            background-color: #f8f9fa;
        }

        .badge.bg-success-soft {
            background-color: var(--success-soft);
            color: var(--success-text);
        }

        .badge.bg-warning-soft {
            background-color: var(--warning-soft);
            color: var(--warning-text);
        }

        .badge.bg-info-soft {
            background-color: var(--info-soft);
            color: var(--info-text);
        }

        .quick-action-btn {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            border-radius: 0.5rem;
            background-color: #ffffff;
            border: 1px solid var(--border-light);
            color: var(--secondary-accent-color);
            text-decoration: none;
            transition: all 0.2s ease-in-out;
        }

            .quick-action-btn:hover {
                background-color: var(--primary-brand-color);
                color: #ffffff;
                border-color: var(--primary-brand-color);
                transform: translateY(-3px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

            .quick-action-btn i {
                font-size: 1.75rem;
                margin-bottom: 0.5rem;
            }

            .quick-action-btn span {
                font-size: 0.9rem;
                font-weight: 500;
            }

        .notification-bell .badge {
            font-size: 0.6em;
            padding: 0.3em 0.5em;
            position: absolute;
            top: 8px;
            right: 0px;
        }

        .section-title {
            text-align: center;
            margin-bottom: 50px;
            font-weight: 600;
            color: var(--primary-brand-color);
        }

        .feature-card,
        .loan-product-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, .1);
            transition: transform .3s ease, box-shadow .3s ease;
            height: 100%;
        }

            .feature-card:hover,
            .loan-product-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, .15);
            }

            .feature-card .card-body,
            .loan-product-card .card-body {
                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }

        .card-icon {
            font-size: 3rem;
            color: var(--secondary-accent-color);
            margin-bottom: 20px;
            text-align: center;
        }

        .card-title {
            font-weight: 600;
            color: var(--primary-brand-color);
        }

        .cta-section {
            background-color: var(--primary-brand-color);
            color: white;
            padding: 60px 0;
            text-align: center;
        }

            .cta-section h2 {
                font-size: 2.5rem;
                margin-bottom: 20px;
            }

        .btn-outline-primary {
            color: var(--primary-brand-color);
            border-color: var(--primary-brand-color);
        }

            .btn-outline-primary:hover {
                background-color: var(--primary-brand-color) !important;
                color: white;
            }

        .btn-custom-primary {
            background-color: var(--primary-brand-color);
            border-color: var(--primary-brand-color);
            color: white;
            padding: 10px 20px;
            font-weight: 500;
        }

            .btn-custom-primary:hover {
                background-color: #081e55;
                border-color: #081e55;
            }

        .btn-custom-secondary {
            background-color: var(--text-secondary);
            border-color: var(--text-secondary);
            color: white;
            padding: 10px 20px;
            font-weight: 500;
        }

            .btn-custom-secondary:hover {
                background-color: #5a6268;
                border-color: #5a6268;
            }


        .notification-item {
            display: flex;
            align-items: flex-start; 
            padding: 1rem;
            border-radius: 0.5rem;
            margin-bottom: 1rem;
            transition: background-color 0.2s ease-in-out, transform 0.2s ease-in-out;
            border-left: 4px solid transparent;
            background-color: #ffffff;
        }

            .notification-item:hover {
                background-color: #f8f9fa;
                transform: translateX(3px);
            }

            .notification-item a {
                text-decoration: none;
                color: inherit;
                display: flex;
                width: 100%;
            }

        .notification-icon {
            font-size: 1.5rem;
            margin-right: 1rem;
            width: 30px; 
            text-align: center;
        }

        .notification-content strong {
            display: block;
            font-weight: 600;
            margin-bottom: 0.1rem;
            color: var(--text-dark);
        }

        .notification-content small {
            font-size: 0.85rem;
            color: var(--text-secondary);
            line-height: 1.4;
        }

        .notification-item-danger {
            border-left-color: var(--danger-color);
        }

            .notification-item-danger .notification-icon {
                color: var(--danger-color);
            }

            .notification-item-danger .notification-content strong {
                color: var(--danger-color);
            }

        .notification-item-warning {
            border-left-color: var(--warning-color);
        }

            .notification-item-warning .notification-icon {
                color: var(--warning-color);
            }

        .notification-item-info {
            border-left-color: var(--secondary-accent-color);
        }

            .notification-item-info .notification-icon {
                color: var(--secondary-accent-color);
            }

        .notification-item-success {
            border-left-color: var(--success-color);
        }

            .notification-item-success .notification-icon {
                color: var(--success-color);
            }

        .notification-list .notification-item:last-child {
            margin-bottom: 0;
        }
    </style>
</head>

<body>
    <div id="page-content-wrapper">
        <section class="hero-section">
            <div class="container">
                <h1>Unlock Your Financial Goals with Ease</h1>
                <p class="lead">
                    Experience a streamlined, secure, and user-friendly platform for all your loan needs.
                    From application to repayment, we've got you covered.
                </p>
                <a href="#features" class="btn btn-lg btn-light fw-bold">Discover Our Features</a>
            </div>
        </section>

        <div class="container-fluid p-4">
            @if (Model.HasActiveLoans)
            {
                <div class="row g-4 mb-4">
                    <div class="col-lg-8">
                        <div class="card h-100">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <span><i class="fas fa-file-signature me-2"></i>Summary of @Model.ActiveLoanCount Active Loan(s)</span>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3 mb-md-0">
                                        <div class="card-title-custom">Total Outstanding Balance</div>
                                        <div class="card-text-value">@Model.TotalOutstandingBalance.ToString("C")</div>
                                    </div>
                                    <div class="col-md-6 mb-3 mb-md-0">
                                        <div class="card-title-custom">Total Next Payment</div>
                                        <div class="card-text-value small">@Model.TotalNextPaymentAmount.ToString("C")</div>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-6">
                                        <div class="card-title-custom">Total Original Loan Amount</div>
                                        <div class="card-text-value small">@Model.TotalPrincipalAmount.ToString("C")</div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card-title-custom">Earliest Due Date</div>
                                        <div class="card-text-value small">@(Model.EarliestNextDueDate?.ToString("MMMM d, yyyy") ?? "N/A")</div>
                                    </div>
                                </div>
                                <hr class="my-3">
                                <div>
                                    <div class="d-flex justify-content-between mb-1">
                                        <span class="small fw-medium">Overall Progress</span>
                                        <span class="small fw-medium">@Model.OverallProgressPercentage% Complete</span>
                                    </div>
                                    <div class="progress loan-progress">
                                        <div class="progress-bar bg-primary" role="progressbar" style="width: @Model.OverallProgressPercentage%;"
                                             aria-valuenow="@Model.OverallProgressPercentage" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="card h-100">
                            <div class="card-header">
                                <i class="fas fa-bell me-2"></i>Notifications & Alerts
                            </div>
                            <div class="card-body">
                                @{
                                    var today = DateTime.Today;
                                }
                                <div class="notification-list">
                                    @if (Model.EarliestNextDueDate.HasValue)
                                    {
                                        var dueDate = Model.EarliestNextDueDate.Value.Date;
                                        var formattedDate = dueDate.ToString("MMMM d");

                                        if (dueDate < today)
                                        {
                                            <div class="notification-item notification-item-danger">
                                                <a href="@Url.Action("AcceptedLoans","Customer")" title="Go to payments">
                                                    <div class="notification-icon">
                                                        <i class="fas fa-exclamation-triangle"></i>
                                                    </div>
                                                    <div class="notification-content">
                                                        <strong>Payment Overdue</strong>
                                                        <small>Your payment was due on @formattedDate. Please pay now to avoid fees.</small>
                                                    </div>
                                                </a>
                                            </div>
                                        }
                                        else if (dueDate.Year > today.Year || dueDate.Month > today.Month)
                                        {
                                            <div class="notification-item notification-item-success">
                                                <a href="@Url.Action("AcceptedLoans","Customer")" title="View your loans">
                                                    <div class="notification-icon">
                                                        <i class="fas fa-calendar-check"></i>
                                                    </div>
                                                    <div class="notification-content">
                                                        <strong>All Clear!</strong>
                                                        <small>No payments are due this month. Your next payment is scheduled for @formattedDate.</small>
                                                    </div>
                                                </a>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="notification-item notification-item-warning">
                                                <a href="@Url.Action("AcceptedLoans","Customer")" title="Go to payments">
                                                    <div class="notification-icon">
                                                        <i class="fas fa-hourglass-half"></i>
                                                    </div>
                                                    <div class="notification-content">
                                                        <strong>Payment Due Soon</strong>
                                                        <small>Your next payment is due on @formattedDate.</small>
                                                    </div>
                                                </a>
                                            </div>
                                        }
                                    }
                                    <div class="notification-item notification-item-info">
                                        <a href="@Url.Action("CustomerStatements", "Customer")">
                                            <div class="notification-icon">
                                                <i class="fas fa-file-invoice-dollar"></i>
                                            </div>
                                            <div class="notification-content">
                                                <strong>New Statement Available</strong>
                                                <small>Click to view your latest loan statements and history.</small>
                                            </div>
                                        </a>
                                    </div>

                                    <div class="notification-item notification-item-info">
                                        <a href="@Url.Action("LoanApplication", "Customer")">
                                            <div class="notification-icon">
                                                <i class="fas fa-tags"></i>
                                            </div>
                                            <div class="notification-content">
                                                <strong>Special Loan Offer</strong>
                                                <small>Thinking about a new goal? Check out our latest loan rates.</small>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                

                <h2 class="h5 mb-3">Quick Actions</h2>
                <div class="row g-3 mb-4">
                    <div class="col-6 col-md-3">
                        <a href="@Url.Action("AcceptedLoans","Customer")" class="quick-action-btn text-center">
                            <i class="fas fa-money-bill-wave"></i>
                            <span>Make Payment</span>
                        </a>
                    </div>
                    <div class="col-6 col-md-3">
                        <a href="@Url.Action("CustomerStatements", "Customer")" class="quick-action-btn text-center">
                            <i class="fas fa-file-download"></i>
                            <span>Download Statement</span>
                        </a>
                    </div>
                    <div class="col-6 col-md-3">
                        <a href="@Url.Action("RequestSupport", "Customer")" class="quick-action-btn text-center">
                            <i class="fas fa-comments-dollar"></i>
                            <span>Request Support</span>
                        </a>
                    </div>
                    <div class="col-6 col-md-3">
                        <a href="@Url.Action("LoanApplication", "Customer")" class="quick-action-btn text-center">
                            <i class="fas fa-plus-circle"></i>
                            <span>Apply New Loan</span>
                        </a>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <span><i class="fas fa-receipt me-2"></i>Recent Payment History (All Loans)</span>
                                <a href="@Url.Action("AllPayments", "Customer")" class="btn btn-sm btn-outline-primary">
                                    View All Payments <i class="fas fa-arrow-right ms-1"></i>
                                </a>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover table-striped mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th scope="col">Date</th>
                                                <th scope="col">Description</th>
                                                <th scope="col">Amount</th>
                                                <th scope="col">Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var payment in Model.RecentPayments)
                                            {
                                                <tr>
                                                    <td>@payment.PaymentDate?.ToString("MMMM d, yyyy")</td>
                                                    <td>@payment.Description</td>
                                                    <td>@payment.PaidAmount.ToString("C")</td>
                                                    <td><span class="badge rounded-pill bg-success-soft">@payment.Status</span></td>
                                                </tr>
                                            }
                                            @if (!Model.RecentPayments.Any())
                                            {
                                                <tr>
                                                    <td colspan="4" class="text-center p-4">No recent payments found.</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center p-5 bg-light rounded border">
                    <i class="fas fa-info-circle fa-3x text-primary mb-3"></i>
                    <h4 class="fw-bold">No Active Loans</h4>
                    <p class="text-muted">You do not have any active loans at the moment. You can apply for a new one to get started.</p>
                    <a href="@Url.Action("LoanApplication", "Customer")" class="btn btn-primary">
                        <i class="fas fa-plus-circle me-2"></i>Apply for a New Loan
                    </a>
                </div>
            }

            <section id="features" class="py-5">
                <div class="container">
                    <h2 class="section-title">Why Choose Our Loan Management System?</h2>
                    <div class="row g-4">
                        <div class="col-md-6 col-lg-3">
                            <div class="card feature-card">
                                <div class="card-body text-center">
                                    <div class="card-icon"><i class="fas fa-cogs"></i></div>
                                    <h5 class="card-title">Streamlined Process</h5>
                                    <p class="card-text">
                                        Enjoy a hassle-free experience with our efficient loan
                                        application, approval, and disbursement process.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <div class="card feature-card">
                                <div class="card-body text-center">
                                    <div class="card-icon"><i class="fas fa-hand-holding-usd"></i></div>
                                    <h5 class="card-title">Diverse Loan Products</h5>
                                    <p class="card-text">
                                        Access various loan types including personal, home, and vehicle
                                        loans, tailored to your needs.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <div class="card feature-card">
                                <div class="card-body text-center">
                                    <div class="card-icon"><i class="fas fa-chart-line"></i></div>
                                    <h5 class="card-title">Transparent Tracking</h5>
                                    <p class="card-text">
                                        Easily track your application status, repayment schedules, and
                                        outstanding balances in real-time.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <div class="card feature-card">
                                <div class="card-body text-center">
                                    <div class="card-icon"><i class="fas fa-shield-alt"></i></div>
                                    <h5 class="card-title">Secure & Reliable</h5>
                                    <p class="card-text">
                                        Your data is protected with robust security and KYC
                                        verification, ensuring a safe banking experience.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section id="loan-products" class="py-5 bg-light">
                <div class="container">
                    <h2 class="section-title">Explore Our Loan Offerings</h2>
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="card loan-product-card">
                                <img src="https://images.unsplash.com/photo-1520333789090-1afc82db536a?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60"
                                     class="card-img-top" alt="Personal Loan" style="height: 200px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title">Personal Loans</h5>
                                    <p class="card-text">
                                        Flexible personal loans to meet your individual needs, from
                                        education to travel or emergencies.
                                    </p>
                                    <a href="@Url.Action("LoanApplication", "Customer")" class="btn btn-sm btn-outline-primary">Apply Now</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card loan-product-card">
                                <img src="https://images.unsplash.com/photo-1560518883-ce09059eeffa?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60"
                                     class="card-img-top" alt="Home Loan" style="height: 200px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title">Home Loans</h5>
                                    <p class="card-text">
                                        Achieve your dream of homeownership with our competitive home
                                        loan rates and terms.
                                    </p>
                                    <a href="@Url.Action("LoanApplication", "Customer")" class="btn btn-sm btn-outline-primary">Apply Now</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card loan-product-card">
                                <img src="https://images.unsplash.com/photo-1550355291-bbee04a92027?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60"
                                     class="card-img-top" alt="Vehicle Loan" style="height: 200px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title">Vehicle Loans</h5>
                                    <p class="card-text">
                                        Get behind the wheel of your new car or bike with our easy and
                                        affordable vehicle loan options.
                                    </p>
                                    <a href="@Url.Action("LoanApplication", "Customer")" class="btn btn-sm btn-outline-primary">Apply Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section id="how-it-works" class="py-5">
                <div class="container">
                    <h2 class="section-title">Simple Steps to Your Loan</h2>
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="p-3">
                                <div class="card-icon"><i class="fas fa-user-plus"></i></div>
                                <h5>1. Register & Verify</h5>
                                <p>Create your account and complete KYC verification quickly.</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3">
                                <div class="card-icon"><i class="fas fa-file-alt"></i></div>
